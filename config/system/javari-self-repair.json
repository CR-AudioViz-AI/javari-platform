  "version": "1.0.0",
  "detection": {
    "error_rate_threshold": 0.01,
    "anomaly_detection": true
  },
  "retry_policy": {
    "max_attempts": 3,
    "backoff_base_seconds": 1,
    "backoff_max_seconds": 60
